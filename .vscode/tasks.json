{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build current file",
			"type": "shell",
			"command": "g++",
			"args": [
				"-std=c++17",
				"-g",
				"${file}",
				"-o",
				"main"
			],
			"options": {
				"shell": {
					"executable": "bash",
					"args": [
						"-lc"
					]
				}
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				"$gcc"
			]
		}
	]
}